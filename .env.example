# ==============================================================================
# ENVIRONMENT VARIABLES FOR UNIVERSITY MANAGEMENT SYSTEM
# کپی کرده و نام آن را به .env تغییر دهید
# ==============================================================================

# Django Settings
SECRET_KEY=your-very-secret-key-here-change-this-in-production-must-be-at-least-50-characters
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# CSRF Protection
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=university_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@university.edu

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring (Production)
SENTRY_DSN=

# Academic Configuration
CURRENT_ACADEMIC_YEAR=1403-1404
SEMESTER_REGISTRATION_OPEN=True

# File Storage (Production - AWS S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ==============================================================================
# PRODUCTION SETTINGS (فقط در production استفاده کنید)
# ==============================================================================

# Security (فقط در production True کنید)
# DEBUG=False
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Database Connection Pooling
# DATABASE_CONNECTION_POOLING=True

# Cache Settings for Production
# CACHE_TIMEOUT_SHORT=300
# CACHE_TIMEOUT_MEDIUM=1800
# CACHE_TIMEOUT_LONG=7200

# ==============================================================================
# BIG DATA STACK CONFIGURATION (optional - for future use)
# ==============================================================================

# Apache Kafka
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_TOPIC_PREFIX=university

# ClickHouse (OLAP Database)
# CLICKHOUSE_HOST=localhost
# CLICKHOUSE_PORT=9000
# CLICKHOUSE_USER=default
# CLICKHOUSE_PASSWORD=
# CLICKHOUSE_DATABASE=university_analytics

# MinIO (Object Storage)
# MINIO_ENDPOINT=localhost:9000
# MINIO_ACCESS_KEY=minioadmin
# MINIO_SECRET_KEY=minioadmin
# MINIO_BUCKET_NAME=university-data

# Apache Airflow
# AIRFLOW_HOME=/opt/airflow
# AIRFLOW__CORE__DAGS_FOLDER=/opt/airflow/dags
# AIRFLOW__CORE__EXECUTOR=CeleryExecutor

# Trino/Presto (Query Engine)
# TRINO_HOST=localhost
# TRINO_PORT=8080
# TRINO_USER=admin
# TRINO_CATALOG=iceberg
# TRINO_SCHEMA=university
